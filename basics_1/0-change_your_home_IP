#!/bin/bash

# Define the target entries
localhost_entry="127.0.0.2 localhost"
facebook_entry="8.8.8.8 facebook.com"

# Backup the current /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Add or update localhost entry
if grep -q "localhost" /etc/hosts; then
    sudo sed -i "s/^.*localhost.*/$localhost_entry/" /etc/hosts
else
    echo "$localhost_entry" | sudo tee -a /etc/hosts > /dev/null
fi

# Add or update facebook.com entry
if grep -q "facebook.com" /etc/hosts; then
    sudo sed -i "s/^.*facebook.com.*/$facebook_entry/" /etc/hosts
else
    echo "$facebook_entry" | sudo tee -a /etc/hosts > /dev/null
fi

echo "Hosts file updated successfully!"
